@model Fall2025_Project3_jma33.Models.ActorDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Actor Details</h1>

<div class="mt-2">
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Actor.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.Gender)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Actor.Gender)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.Age)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Actor.Age)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.IMDBLink)
        </dt>
        <dd class = "col-sm-10">
            <a href="model.Actor.IMDBLink">@Html.DisplayFor(model => model.Actor.IMDBLink)</a>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.Photo)
        </dt>
        <dd class = "col-sm-10">
            @if (@Model?.Actor.Photo != null)
            {
                <img src="@Url.Action("Photo", "Actors", new { id=@Model?.Actor.Id })" width="200" height=auto />
            }
        </dd>
    </dl>
</div>

<div>
    <h2>Movies</h2>
    <table class="table OtherInfoTables">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Movies)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">
                            <i class="fa fa-pen" style="color: green;"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">
                            <i class="fa-solid fa-bars" style="color: silver;"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-primary">
                            <i class="fa fa-xmark" style="color: red;"></i>
                        </a>
                        @* <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    </br>
    <h3 style="text-align: center;">Overall Sentiment Score: @Model.AvgSentiment</h2>
    </br>
    <h2>Recent Tweets</h2>
    <table class="table" data-table>
        <thead>
            <tr>
                <th>
                    User
                </th>
                <th>
                    Tweet
                </th>
                <th>
                    Sentiment Score
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.TweetsandSents)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tweet_Username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tweet_Text)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sentiment_String)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Actor.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
