@model IEnumerable<Fall2025_Project3_jma33.Models.Actor>

@{
    ViewData["Title"] = "Index";
}

<h1>All Actors</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table EditTables">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IMDBLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                <a href="@item.IMDBLink">@Html.DisplayFor(modelItem => item.IMDBLink)</a>
            </td>
            <td>
                <img src="@Url.Action("Photo", "Actors", new { id=@item.Id })" width="100" height=auto />
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">
                    <i class="fa fa-pen" style="color: green;"></i>
                </a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">
                    <i class="fa-solid fa-bars" style="color: silver;"></i>
                </a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-primary">
                    <i class="fa fa-xmark" style="color: red;"></i>
                </a>

                @* <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                @* <a asp-action="Details" asp-route-id="@item.Id">Details</a> | *@
                @* <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> *@
            </td>
        </tr>
}
    </tbody>
</table>
